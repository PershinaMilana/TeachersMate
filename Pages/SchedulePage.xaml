<Page x:Class="TeachersMate.Pages.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeachersMate.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="556" d:DesignWidth="910"
      Title="SchedulePage" >

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style x:Key="tableGrid" TargetType="Grid">
            <Setter Property="Background" Value="#FFD0E6F1"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="#FF235759"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>
    </Page.Resources>

    <Grid Background="AliceBlue">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,10,10,0">
                <Button Name="AddButton" Content="Add student" Margin="10" Width="90" Click="AddStud_click"/>
                <Button Name="DeleteButton" Content="Delete student" Margin="10" Width="90"  Click="DeleteStud_click"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Name:" Width="45" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtName" Grid.Row="0" Width="120" Grid.Column="1" Margin="5" Height="20" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Phone:" Width="45" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtPhone" Grid.Row="0" Width="120" Grid.Column="1" Margin="5" Height="20" />
                </StackPanel>

                <Label Content="Day:" Grid.Row="1" Width="35" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbDay" Grid.Row="1" Width="90" Grid.Column="1" Margin="10" Height="23" >
                    <ComboBoxItem Content="Monday"/>
                    <ComboBoxItem Content="Tuesday"/>
                    <ComboBoxItem Content="Wednesday"/>
                    <ComboBoxItem Content="Thursday"/>
                    <ComboBoxItem Content="Friday"/>
                    <ComboBoxItem Content="Saturday"/>
                    <ComboBoxItem Content="Sunday"/>
                </ComboBox>

                <Label Content="Time:" Width="40" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbTime" Grid.Row="2" Grid.Column="1" Margin="10" Width="90" Height="23" >
                    <ComboBoxItem Content="10:00"/>
                    <ComboBoxItem Content="11:00"/>
                    <ComboBoxItem Content="12:00"/>
                    <ComboBoxItem Content="13:00"/>
                    <ComboBoxItem Content="14:00"/>
                    <ComboBoxItem Content="15:00"/>
                    <ComboBoxItem Content="16:00"/>
                    <ComboBoxItem Content="17:00"/>
                    <ComboBoxItem Content="18:00"/>
                    <ComboBoxItem Content="19:00"/>
                    <ComboBoxItem Content="20:00"/>
                </ComboBox>
            </StackPanel>

            <DataGrid x:Name="studentsDataGrid" Grid.Row="1" Margin="10" Width="890" AutoGenerateColumns="False" CanUserAddRows="False" CanUserResizeColumns="False" SelectedCellsChanged="studentsDataGrid_SelectedCellsChanged">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Width" Value="120"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value=".3"/>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                        <DataGridTextColumn Width="40" Header="Time" Binding="{Binding Time}"/>
                        <DataGridTextColumn Header="Monday" Binding="{Binding Monday}"/>
                        <DataGridTextColumn Header="Tuesday" Binding="{Binding Tuesday}"/>
                        <DataGridTextColumn Header="Wednesday" Binding="{Binding Wednesday}"/>
                        <DataGridTextColumn Header="Thursday" Binding="{Binding Thursday}"/>
                        <DataGridTextColumn Header="Friday" Binding="{Binding Friday}"/>
                        <DataGridTextColumn Header="Saturday" Binding="{Binding Saturday}"/>
                        <DataGridTextColumn Header="Sunday" Binding="{Binding Sunday}"/>
                    </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Grid>
</Page>